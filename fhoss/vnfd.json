      {  
         "name":"fhoss",
         "vendor":"fokus",
         "version":"6.0.0",
         "lifecycle_event":[  
            {  
               "event":"CONFIGURE",
               "lifecycle_events":[
			"bind9_relation_joined.sh",
			"icscf_relation_joined.sh",
			"scscf_relation_joined.sh"
               ]
            },
            {  
               "event":"INSTANTIATE",
               "lifecycle_events":[ 
			"fhoss_install.sh"
               ]
            },
            {  
               "event":"START",
               "lifecycle_events":[
			"fhoss_generate_config.sh",
			"fhoss_start.sh"
               ]
            }
         ],
         "configurations":{  
            "name":"client-configuration",
            "configurationParameters":[
	       {  
                  "confKey":"diameter_p",
                  "value":"3868",
                  "description":"The port on which fhoss will listen for incoming diameter connections."
               },
	       {  
                  "confKey":"name",
                  "value":"hss",
                  "description":"The name to be used for the fhoss for creating the entries for DNS."
               }
            ]
         },
         "vdu":[  
            {  
               "vm_image":[],
               "scale_in_out":1,
               "vnfc":[  
                  {  
                     "connection_point":[  
                        {  
			   "floatingIp":"random",
                           "virtual_link_reference":"mgmt"
                        } 
                     ]
                  }
               ]
            }
         ],
         "virtual_link":[  
            {  
               "name":"mgmt"
            }
         ],
         "deployment_flavour":[  
            {  
               "flavour_key":"m1.small"
            }
         ],
         "type":"fhoss",
         "endpoint":"generic",
         "provides":[
           "name",
           "mgmt",
           "mgmt_floatingIp",
           "port"
         ],
         "requires":
         {
           "bind9":
             {
               "parameters":[
               		"useFloatingIpsForEntries",
                        "realm",
                        "mgmt",
                        "mgmt_floatingIp"]},
           "icscf":
              {
                 "parameters":[
                 	"name",
                        "diameter_p",
                        "mgmt",
                        "mgmt_floatingIp"]},
           "scscf":
              {
                 "parameters":[
                 	"name",
                        "port",
                        "diameter_p",
                        "mgmt",
                        "mgmt_floatingIp"]}
         }
      }
