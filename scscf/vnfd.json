      {  
         "name":"scscf",
         "vendor":"fokus",
         "version":"6.0.0",
         "lifecycle_event":[  
            {  
               "event":"CONFIGURE",
               "lifecycle_events":[
			"bind9_relation_joined.sh",
			"fhoss_relation_joined.sh",
			"icscf_relation_joined.sh"
               ]
            },
            {  
               "event":"INSTANTIATE",
               "lifecycle_events":[ 
			"scscf_install.sh"
               ]
            },
            {  
               "event":"START",
               "lifecycle_events":[
			"scscf_generate_config.sh",
			"scscf_start.sh"
               ]
            }
         ],
         "configurations":{  
            "name":"client-configuration",
            "configurationParameters":[
	       {  
                  "confKey":"port",
                  "value":"6060",
                  "description":"The port used for the scscf in the OpenIMSCore."
               },
	       {  
                  "confKey":"name",
                  "value":"scscf",
                  "description":"The name to be used for the scscf for creating the entries for DNS."
               },
	       {  
                  "confKey":"diameter_p",
                  "value":"3870",
                  "description":"The port on which scscf will listen for incoming diameter connections."
               }
            ]
         },
         "vdu":[  
            {  
               "vm_image":[],
               "scale_in_out":1,
               "vnfc":[  
                  {  
                     "connection_point":[  
                        {  
			   "floatingIp":"random",
                           "virtual_link_reference":"mgmt"
                        } 
                     ]
                  }
               ]
            }
         ],
         "virtual_link":[  
            {  
               "name":"mgmt"
            }
         ],
         "deployment_flavour":[  
            {  
               "flavour_key":"m1.small"
            }
         ],
         "type":"scscf",
         "endpoint":"generic",
         "provides":[
           "name",
           "port",
           "mgmt",
           "mgmt_floatingIp",
           "diameter_p"
         ],
         "requires":
         {
           "fhoss":
              {
                 "parameters":[
                 	"name",
			"port",
			"mgmt",
			"mgmt_floatingIp"]},
           "icscf":
              {
                 "parameters":[
                 	"name",
                        "mgmt",
                        "mgmt_floatingIp"]},
           "bind9":
              {"parameters":[
                        "useFloatingIpsForEntries",
                        "realm",
                        "mgmt",
                        "mgmt_floatingIp"]}
         }
      }
