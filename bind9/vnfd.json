      {  
         "name":"bind9",
         "vendor":"fokus",
         "version":"6.0.0",
         "lifecycle_event":[  
            {  
               "event":"CONFIGURE",
               "lifecycle_events":[
			"fhoss_relation_joined.sh",
			"icscf_relation_joined.sh",
			"scscf_relation_joined.sh",
			"pcscf_relation_joined.sh"
               ]
            },
            {  
               "event":"INSTANTIATE",
               "lifecycle_events":[ 
			"bind9_install.sh"
               ]
            },
            {  
               "event":"START",
               "lifecycle_events":[
			"generate_zone_file.sh",
			"bind9_restart.sh"
               ]
            }
         ],
         "configurations":{  
            "name":"client-configuration",
            "configurationParameters":[
	       {  
                  "confKey":"realm",
                  "value":"epc.mnc001.mcc001.3gppnetwork.org",
                  "description":"The domain name used for creating the entries for dns."
               },
	       {  
                  "confKey":"useFloatingIpsForEntries",
                  "value":"true",
                  "description":"Boolean to define whether or not to use floating ips (if availabe) when creating the dns entries."
               }
            ]
         },
         "vdu":[  
            {  
               "vm_image":[],
               "scale_in_out":1,
               "vnfc":[  
                  {  
                     "connection_point":[  
                        {  
			   "floatingIp":"random",
                           "virtual_link_reference":"mgmt"
                        } 
                     ]
                  }
               ]
            }
         ],
         "virtual_link":[  
            {  
               "name":"mgmt"
            }
         ],
         "deployment_flavour":[  
            {  
               "flavour_key":"m1.small"
            }
         ],
         "type":"bind9",
         "endpoint":"generic",
         "requires":
         {
           "fhoss":
              {
                 "parameters":[
                 	"name",
                        "mgmt",
                        "mgmt_floatingIp"]},
           "icscf":
              {
                 "parameters":[
                 	"name",
                        "port",
                        "mgmt",
                        "mgmt_floatingIp"]},
           "scscf":
              {
                 "parameters":[
                 	"name",
                        "port",
                        "mgmt",
                        "mgmt_floatingIp"]},
           "pcscf":
              {
                 "parameters":[
                 	"name",
                        "port",
                        "mgmt",
                        "mgmt_floatingIp"]}
         }
      }
